<h2>Create New Figure</h2>
<h3>Enter Figure Name:</h3>
<form action="/figures" method="post">
  <input id="figure_name" type="text" name="figure[name]">
  <br>
  <h3>Select your titles:</h3>
  <% @titles.each do |title| %>
    <input type='checkbox' name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"> <%=title.name%></input><br>
  <%end%>
  <p>Create a new title: <input type="text" name="title[name]" id="new_title"></p>
  <br>
  <h3>Select your landmarks:</h3>
  <% @landmarks.each do |landmark| %>
    <input type='checkbox' name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"> <%=landmark.name%></input><br>
  <%end%>
  <br>
  <p>Create a new landmark: <input type="text" name="landmark[name]" id="new_landmark"></p>
  <p>Enter the landmark year completed: <input type="text" name="landmark[year_completed]"></p>
  <br>
    <input type="submit" id="Create New Figure">


</form>
